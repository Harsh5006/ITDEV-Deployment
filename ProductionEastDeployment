node{
    properties([
        parameters([
        string(name: 'environment', description: 'Environment to deploy to (e.g., dev, staging, prod)', defaultValue: 'dev'),
        string(name: 'application_id', description: 'Unique ID of the application'),
        string(name: 'version', description: 'Version number of the application')
        ])
    ])
  stages{
    stage('Listing Parameters'){
      steps{
        echo "Environment: ${params.environment}"
        echo "Application ID: ${params.application_id}"
        echo "Version: ${params.version}"
      }
    }
  }
}
